---
import HeaderLink from './HeaderLink.astro';
import Logo from '../components/icons/Logo.astro'
import { SITE_TITLE } from '../consts';
---

<header>
	<a href="/" tabindex="1" aria-label="Regresa a la pÃ¡gina de inicio"class="logo">
		<Logo/>
	</a>
	<nav>
		<HeaderLink tabindex="2" href="/">Inicio</HeaderLink>
		<HeaderLink tabindex="3" href="https://www.casvaru.com">Portafolio</HeaderLink>
	</nav>
</header>
<style>
	header {
		position: fixed;
		display: flex;
		place-items: center;
		justify-content: space-between;
		padding: 0px 40px;
		width: 100%; height: 60px;
		inset: 0;
		margin: 0em 0 2em;
		backdrop-filter: blur(10px);
		margin: 0 auto;
		max-width: 1440px;
		z-index: 100;
	}
	nav{
		display: flex;
		padding: 5px;
		align-items: center;
		gap: 20px;
		/* max-width: 1440px; */
	}
	h2 {
		margin: 0.5em 0;
	}
	.logo{
		fill: white;
		width: 50px; height: 50px;
	}
</style>
